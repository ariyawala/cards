<div class="sinupPage">
  <div class="titleArea">
    <h1>アカウントネームを編集</h1>
  </div>
  <div class="container">
    <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-5, signupForm", method: :put }, local: true do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
      </div>
      <div class="form-group">
        <%= f.label :password %> <i>(確認のため現在のパスワードを入力してください)</i><br />
        <%= f.password_field :current_password, class: "form-control", placeholder: "パスワードを入力してください", autocomplete: "current-password" %>
      </div>
      <div class="text-center">
        <%= f.submit "アカウントを編集", class: "btn submitBtn" %>
      </div>
    <% end %>
  </div>
</div>






